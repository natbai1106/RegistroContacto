<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RegistroContacto.MainPage">

    <StackLayout Margin="20,35,20,20">
        <Frame BackgroundColor="#2196F3" Margin="0,5,0,30" CornerRadius="0">
            <Label Text="Información del Usuario" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Nombres del Usuario:" 
               FontSize="Large"/>
        <Entry x:Name="nombreUsuario"
               FontSize="Large"/>
        
        <Label Text="Apellidos del Usuario:"
               FontSize="Large"/>
        <Entry x:Name="apellidoUsuario"
               FontSize="Large"/>
        
        <Label Text="Edad:"
               FontSize="Large"/>
        <Entry x:Name="edad"
               FontSize="Large"
               Keyboard="Numeric"/>
        
        <Label Text="Correo Electrónico"
               FontSize="Large"/>
        <Entry Keyboard="Email" x:Name="correo"
               FontSize="Large"/>

        <Button Clicked="enviarInformacion_Clicked" 
                x:Name="enviarInformacion" 
                Text="Enviar Información"
                FontSize="Large"
                BackgroundColor="Aqua"
                BorderWidth="5"
                CornerRadius="5"
                WidthRequest="150"
                HeightRequest="75" />
    </StackLayout>

</ContentPage>
